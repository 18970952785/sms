<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.malicn.server.dao.notice.NoticeDao">
    <resultMap id="BaseResultMap" type="com.malicn.server.domain.notice.Notice">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="user_id" property="userId" jdbcType="BIGINT"/>
        <result column="client_type" property="clientType" jdbcType="TINYINT"/>
        <result column="type" property="type" jdbcType="TINYINT"/>
        <result column="title" property="title" jdbcType="VARCHAR"/>
        <result column="content"  property="content" jdbcType="VARCHAR"/>
        <result column="is_read" property="isRead" jdbcType="TINYINT"/>
        <result column="read_time" property="readTime" jdbcType="TIMESTAMP"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
        <result column="is_deleted" property="isDeleted" jdbcType="TINYINT" />
    </resultMap>

    <sql id="Base_Column_List">
        id, user_id, client_type, type, title, content, is_read, read_time,
        create_time, update_time, is_deleted
    </sql>

    <insert id="insert" parameterType="com.malicn.server.domain.notice.Notice"
            useGeneratedKeys="true" keyProperty="id">
        insert into ml_notice
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="userId != null" >
                user_id,
            </if>
            <if test="clientType != null" >
                client_type,
            </if>
            <if test="type != null" >
                type,
            </if>
            <if test="title != null" >
                title,
            </if>
            <if test="content != null" >
                content,
            </if>
            <if test="createTime != null" >
                create_time,
            </if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides="," >
            <if test="userId != null" >
                #{userId,jdbcType=BIGINT},
            </if>
            <if test="clientType != null" >
                #{clientType,jdbcType=TINYINT},
            </if>
            <if test="type != null" >
                #{type,jdbcType=TINYINT},
            </if>
            <if test="title != null" >
                #{title,jdbcType=VARCHAR},
            </if>
            <if test="content != null" >
                #{content,jdbcType=VARCHAR},
            </if>
            <if test="createTime != null" >
                #{createTime,jdbcType=TIMESTAMP},
            </if>
        </trim>
    </insert>

    <update id="update" parameterType="com.malicn.server.domain.notice.Notice">
        UPDATE ml_notice
        SET
        <if test="userId != null">
            user_id = #{userId},
        </if>
        <if test="clientType != null">
            client_type = #{clientType},
        </if>
        <if test="type != null">
            type = #{type},
        </if>
        <if test="title != null">
            title = #{title},
        </if>
        <if test="content != null">
            content = #{content},
        </if>
        <if test="isRead != null">
            is_read = #{isRead},
        </if>
        <if test="readTime != null">
            read_time = #{readTime},
        </if>
        <if test="isDeleted != null">
            is_deleted = #{isDeleted},
        </if>
        update_time = now()
        WHERE id = #{id}
    </update>

    <!-- 查询我的通知列表 -->
    <select id="selectByUserId" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"/> from ml_notice
        where user_id=#{userId} AND client_type=#{clientType} AND is_deleted = 0
        ORDER BY create_time DESC,id ASC
    </select>



    <!-- 查询通知详情 -->
    <select id="getById" parameterType="java.lang.Long" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM ml_notice where id=#{noticeId}
    </select>

    <!-- 查询一条未读消息 -->
    <select id="getByUnRead" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List" />
        FROM ml_notice WHERE user_id = #{userId} AND is_deleted = 0 AND is_read = 0 limit 1;
    </select>

    <!-- 设为已读 -->
    <update id="updateReaded">
      UPDATE ml_notice SET
      is_read = 1, read_time = now()
      WHERE id=#{noticeId}
    </update>

    <!-- 批量设为已读 -->
    <update id="updateReadedBatch">
        UPDATE ml_notice SET
        is_read = 1, read_time = now()
        WHERE user_id=#{userId} AND is_read = 0 AND id IN
        <foreach collection="ids" open="(" close=")" separator="," item="id">
            #{id}
        </foreach>
    </update>

    <!-- 批量删除通知 -->
    <update id="deleteBatch">
        UPDATE ml_notice SET is_deleted = 1
        WHERE user_id=#{userId} AND is_deleted = 0 AND id IN
        <foreach collection="ids" open="(" close=")" separator="," item="id">
            #{id}
        </foreach>
    </update>

</mapper>