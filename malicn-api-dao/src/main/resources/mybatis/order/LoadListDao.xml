<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.malicn.server.dao.order.LoadListDao" >
  <resultMap id="LoadListMap" type="com.malicn.server.domain.order.LoadList" >
    <id column="order_id" property="orderId" jdbcType="BIGINT" />
    <result column="ship_pics" property="shipPics" jdbcType="VARCHAR" />
    <result column="mark_pics" property="markPics" jdbcType="VARCHAR" />
    <result column="cargo_pics" property="cargoPics" jdbcType="VARCHAR" />
    <result column="driver_id" property="driverId" jdbcType="BIGINT" />
    <result column="driver_name" property="driverName" jdbcType="VARCHAR" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
  </resultMap>
  <insert id="saveLoadList" parameterType="com.malicn.server.domain.order.LoadList">
      INSERT INTO ml_load_list(order_id, ship_pics, mark_pics, cargo_pics, driver_id, driver_name, create_time, update_time)
      VALUES (#{orderId}, #{shipPics}, #{markPics}, #{cargoPics}, #{driverId}, #{driverName}, now(), now())
  </insert>

  <insert id="insertSelective" parameterType="com.malicn.server.domain.order.LoadList" >
    insert into ml_load_list
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="orderId != null" >
        order_id,
      </if>
      <if test="shipPics != null" >
        ship_pics,
      </if>
      <if test="markPics != null" >
        mark_pics,
      </if>
      <if test="cargoPics != null" >
        cargo_pics,
      </if>
      <if test="driverId != null" >
        driver_id,
      </if>
      <if test="driverName != null" >
        driver_name,
      </if>
      <if test="createTime != null" >
        create_time,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="orderId != null" >
        #{orderId,jdbcType=BIGINT},
      </if>
      <if test="shipPics != null" >
        #{shipPics,jdbcType=VARCHAR},
      </if>
      <if test="markPics != null" >
        #{markPics,jdbcType=VARCHAR},
      </if>
      <if test="cargoPics != null" >
        #{cargoPics,jdbcType=VARCHAR},
      </if>
      <if test="driverId != null" >
        #{driverId,jdbcType=BIGINT},
      </if>
      <if test="driverName != null" >
        #{driverName,jdbcType=VARCHAR},
      </if>
      <if test="createTime != null" >
        #{createTime,jdbcType=TIMESTAMP},
      </if>
    </trim>
  </insert>

  <!-- 查询装货清单 -->
  <select id="getLoadListByOrderId" parameterType="java.lang.Long" resultMap="LoadListMap">
    select ship_pics,mark_pics,cargo_pics,driver_name,create_time from ml_load_list where order_id=#{orderId}
  </select>
</mapper>