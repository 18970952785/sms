<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.malicn.server.dao.order.OrderTrackDao" >
  <resultMap id="OrderTrackMap" type="com.malicn.server.domain.order.OrderTrack" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="order_id" property="orderId" jdbcType="BIGINT" />
    <result column="model_id" property="modelId" jdbcType="INTEGER" />
    <result column="old_status" property="oldStatus" jdbcType="TINYINT" />
    <result column="new_status" property="newStatus" jdbcType="TINYINT" />
    <result column="info" property="info" jdbcType="VARCHAR" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="creator_name" property="creatorName"  jdbcType="VARCHAR"/>
  </resultMap>
  <!-- 更新跟踪订单信息 -->
  <insert id="saveOrderTrack" parameterType="com.malicn.server.domain.order.OrderTrack">
      INSERT INTO ml_order_track (order_id,model_id,old_status,new_status,info,creator_name,create_time)
      VALUES (#{orderId},#{modelId},#{oldStatus},#{newStatus},#{info},#{creatorName},
     <choose>
      <when test="createTime != null and createTime !=''">
        #{createTime}
      </when>
      <otherwise>
        now()
      </otherwise>
    </choose>
    )
  </insert>

  <insert id="insertSelective" parameterType="com.malicn.server.domain.order.OrderTrack" >
    insert into ml_order_track
    <trim prefix="(" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        id,
      </if>
      <if test="orderId != null" >
        order_id,
      </if>
      <if test="modelId != null" >
        model_id,
      </if>
      <if test="oldStatus != null" >
        old_status,
      </if>
      <if test="newStatus != null" >
        new_status,
      </if>
      <if test="info != null" >
        info,
      </if>
      <if test="creatorName !=null">
        creator_name,
      </if>
      create_time,
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides="," >
      <if test="id != null" >
        #{id,jdbcType=BIGINT},
      </if>
      <if test="orderId != null" >
        #{orderId,jdbcType=BIGINT},
      </if>
      <if test="modelId != null" >
        #{modelId,jdbcType=INTEGER},
      </if>
      <if test="oldStatus != null" >
        #{oldStatus,jdbcType=TINYINT},
      </if>
      <if test="newStatus != null" >
        #{newStatus,jdbcType=TINYINT},
      </if>
      <if test="info != null" >
        #{info,jdbcType=VARCHAR},
      </if>
      <if test="creatorName !=null">
        #{creatorName,jdbcType=VARCHAR},
       </if>

      <choose>
        <when test="createTime != null">
          #{createTime,jdbcType=TIMESTAMP}
        </when>
        <otherwise>
          now()
        </otherwise>
      </choose>
    </trim>
  </insert>
  <delete id="deleteOrderTackByRollbackOrder" parameterType="java.lang.Long">
    DELETE FROM ml_order_track
    WHERE order_id = #{orderId}
    AND (model_id = 2 OR model_id = 7)
  </delete>

  <!-- 跟踪订单 -->
  <select id="listOrderTrack" resultMap="OrderTrackMap" parameterType="java.lang.Long">
     select
    order_id,
    model_id,
    info,
    create_time from ml_order_track where order_id=#{orderId}
  </select>


  <select id="getTrackMapByOrderId" resultMap="OrderTrackMap"  >
    select
      t1.order_id,
      t1.model_id,
      t1.info,
      t1.create_time,
      t1.creator_name
    FROM ml_order_track t1
        inner join ml_order_track_model t2
      on t1.model_id = t2.id
    WHERE  t2.type = 1
      and  t1.order_id=#{orderId}
  </select>

</mapper>