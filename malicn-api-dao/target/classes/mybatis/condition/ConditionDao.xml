<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.malicn.server.dao.condition.ConditionDao" >
  <resultMap id="ConditionMap" type="com.malicn.server.domain.condition.Condition" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="category" property="category" />
    <result column="rule_enum" property="ruleEnum"/>
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="info" property="info" jdbcType="VARCHAR" />
    <result column="filed" property="filed" jdbcType="VARCHAR" />
    <result column="compare" property="compare" typeHandler="com.malicn.server.enums.handler.CompareEnumsHandler" />
    <result column="value" property="value" jdbcType="VARCHAR" />
    <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="is_deleted" property="isDeleted" jdbcType="TINYINT" />
  </resultMap>

  <sql id="table_name">ml_condition</sql>
  <sql id="all_columns">id,category,rule_enum,name,info,filed,compare,value,create_time,update_time,is_deleted</sql>

  <select id="getAll" resultMap="ConditionMap">
    select
    <include refid="all_columns"/>
    from
    <include refid="table_name"/>
    WHERE is_deleted=0
  </select>

  <select id="getInfoById" resultType="com.malicn.server.domain.condition.Condition">
      SELECT id, name, info
      FROM ml_condition
      WHERE id = #{id} AND is_deleted = 0
  </select>

</mapper>