<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.malicn.server.dao.sys.SysConsDao">

    <resultMap id="SysConsMap" type="com.malicn.server.domain.sys.SysCons">
        <id column="id_key" property="idKey" jdbcType="VARCHAR"/>
        <result column="module" property="module"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="value" property="value" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <resultMap id="keyValueMap" type="HashMap">
        <id column="id_key" property="idKey" jdbcType="VARCHAR"/>
        <result column="value" property="value" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="table_name">ml_sys_cons</sql>
    <sql id="all_columns">id_key,module,name,value,create_time,update_time</sql>


    <insert id="insert" keyColumn="id_key" parameterType="com.malicn.server.domain.sys.SysCons">
        insert into<include refid="table_name"/>(id_key,module,name,value,create_time,update_time) values
        (#{idKey}, #{module}, #{name}, #{value},now(),now())
    </insert>

    <select id="get" parameterType="java.lang.String" resultMap="SysConsMap">
        select
        <include refid="all_columns"/>
        from
        <include refid="table_name"/>
        where id_key = #{idKey}
    </select>

    <select id="getAll" resultMap="SysConsMap">
        select
        <include refid="all_columns"/>
        from
        <include refid="table_name"/>
    </select>

    <select id="getValue" resultType="java.lang.String" parameterType="java.lang.String">
        select
            value
        from
        <include refid="table_name"/>
        where id_key = #{idKey}
    </select>

    <select id="getListByModule" resultMap="SysConsMap" parameterType="java.lang.String">
        select
        <include refid="all_columns"/>
        from
        <include refid="table_name"/>
        where module = #{module}
    </select>

    <select id="getMap" resultMap="SysConsMap" resultType="map" parameterType="java.lang.String">
        select
        <include refid="all_columns"/>
        from
        <include refid="table_name"/>
        where module = #{module}
    </select>

    <select id="getMapByModule" resultMap="keyValueMap" parameterType="java.lang.String">
        select
         id_key,value
        from
        <include refid="table_name"/>
        where module = #{module}
    </select>

    <update id="update" parameterType="com.malicn.server.domain.sys.SysCons">
        UPDATE
        <include refid="table_name"/>
        <set>
            <if test="module != null">
                module = #{module},
            </if>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="value != null">
                value = #{value},
            </if>
        </set>
        where id_key = #{id_key}
    </update>

    <delete id="delete" parameterType="java.lang.String">
        DELETE from <include refid="table_name"/>
        where id_key = #{id_key}
    </delete>
</mapper>