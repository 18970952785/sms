<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.malicn.server.dao.reward.RewardDao" >

  <resultMap id="RewardMap" type="com.malicn.server.domain.reward.Reward" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="type" property="type"   jdbcType="TINYINT" />
    <result column="conditions" property="conditions" jdbcType="VARCHAR" />
    <result column="item" property="item" jdbcType="VARCHAR" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
  </resultMap>

  <sql id="all_column" >
    id, type, conditions, item, create_time, update_time
  </sql>
  <!-- 查询所有的奖励 -->
  <select id="getAllRewards" resultMap="RewardMap" >
    select  
    <include refid="all_column"/>
    from ml_reward t
  </select>

  <!-- 根据类型发放奖励 -->
  <select id="getRewardsByType" resultMap="RewardMap" >
    select
    <include refid="all_column"/>
    from ml_reward t where t.type = #{type}
  </select>


</mapper>